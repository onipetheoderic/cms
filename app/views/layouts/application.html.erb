<!DOCTYPE html>
<html>
  <head>
    <title>Cms2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    

     <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">CMS 2</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
        	<ul class = "nav navbar-nav">
        		<li><%= link_to "Home", root_path %></li>
        		<% @pageNav.each do |page| %>
        			<li><%= link_to page.title, page_path(page.id) %></li>
        		<% end %>
        		<!-- we wanna get all the pages from the database -->
        		
        	</ul>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <!-- After copying the template from: https://getbootstrap.com/docs/3.3/examples/jumbotron/
     The jumbotron and the row container are gonna be cutted, and used to form a partial file-->
    
     <%= render "blocks/jumbotron" %>
    <div class="container">
      <!-- Alert and msgs -->
      <% if flash[:notice] %>
      <div class="alert alert-success"> <%= flash[:notice] %></div>
      <% end %>

      <% if flash[:alert] %>
      <div class="alert alert-success"> <%= flash[:alert] %></div>
      <% end %>

      <%= render "blocks/block" %>
      <%= yield %>
      <hr>

      <footer>
        <p>&copy; 2016 Company, Inc.</p>
      </footer>
    </div> <!-- /container -->
  </body>
</html>
